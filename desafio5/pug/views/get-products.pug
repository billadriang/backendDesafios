doctype html
html
    include includes/head.pug
    body 
        if products.length
            table.table
                thead
                    tr
                    th(scope='col') Nombre
                    th(scope='col') Precio
                    th(scope='col') Miniatura
                tbody.table-group-divider
                    each item in products
                        tr
                            td= item.title
                            td= item.price
                            td
                                img(src=item.thumbnail, width="50")
        else
            p Aun nada compa
        a.btn.btn-success(href='/') Crea un poducto
        include includes/foot.pug